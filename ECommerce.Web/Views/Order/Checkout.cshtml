@model ECommerce.DTOs.Order.OrderCreateDTO
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Checkout</h2>
    <hr />
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.CustomerName)
            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CustomerName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Contact)
            @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Contact)
        </div>
        <button type="submit" class="btn btn-success">Place Order</button>
    }
</div>
