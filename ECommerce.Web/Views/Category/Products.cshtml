@model IEnumerable<ECommerce.DTOs.Product.ProductDTO>
@{
    string categoryName = ViewBag.CategoryName as string ?? "Category Products";
    ViewBag.Title = categoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <h2>@categoryName</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p><strong>Price: ₹@product.Price</strong></p>
                        <a href="@Url.Action("AddToCart", "Cart", new { id = product.ProductId })" class="btn btn-success">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
