@model IEnumerable<ECommerce.DTOs.Product.ProductDTO>

@{
    ViewBag.Title = "Products";
}

<h2>Product List</h2>

<p>
    @Html.ActionLink("Add New Product", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
                <td>@product.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-sm btn-danger">Delete</a>
                    <a href="@Url.Action("UpdateStock", "Product", new { id = product.ProductId })" class="btn btn-sm btn-info">Update Stock</a>
                </td>

            </tr>
        }
    </tbody>
</table>


